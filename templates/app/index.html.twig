{% endblock %}
{% block body %}

    <div class="row">
       <h2><a style="text-decoration: none; color: #000" href="{{ path('topic_index') }}">Les derniers Topics</a></h2>
        {% for topic in topics %}
            <div class="col-md-4 col-lg-4 col-sm-6 mb-3 d-flex align-items-stretch  justify-content-center">
                <div class="card" style="">
                    <img class="card-img-top"
                         src="https://www.mecanismes-dhistoires.fr/wp-content/uploads/2014/11/img-placeholder-dark.jpg"
                         alt="Card image cap">
                    <div class="card-body">
                        <span style="font-size: 12px;">{{ topic.user.name }} - {{ topic.createdAt | date('d/m/Y') }}</span>
                        <h5 class="card-title">{{ topic.name }}</h5>
                        <div class="tags mb-3">
                            {% for tag in topic.tags %}
                                <a style="text-decoration: none" href="{{ path('topic_tag', {'slug':tag.slug}) }}"> <span class="badge badge-warning">{{ tag.text }}</span> </a>
                            {% endfor %}
                        </div>
                        {{ topic.description|length > 80 ? topic.description |striptags|slice(0, 80) ~ '...'  : topic.description | raw }}


                        <div class="btn-topic">
                            <a href="{{ path('topic_show', {'slug' : topic.slug}) }}" class="btn btn-primary">Voir le
                                topic</a>
                        </div>

                    </div>
                </div>
            </div>
        {% endfor %}


    </div>


{% endblock %}
